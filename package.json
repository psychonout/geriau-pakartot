{
    "name": "geriau-pakartot",
    "version": "0.1.0",
    "description": "Įrankiai pagerinantys pakartot.lt patirtį",
    "main": "content.js",
    "scripts": {
        "build": "babel src --out-dir dist --env-name production && npm run copyfiles && npm run zip",
        "copyfiles": "copyfiles -u 1 src/manifest.json src/popup.html src/icons/* dist/",
        "zip": "cd dist && zip -r ../dist.zip .",
        "start": "webpack --watch",
        "lint": "eslint src/**/*.js"
    },
    "author": "https://github.com/psychonout",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.21.5",
        "@babel/core": "^7.21.5",
        "babel-plugin-transform-remove-console": "^6.9.4",
        "copyfiles": "^2.4.1",
        "eslint": "^8.44.0",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4"
    },
    "babel": {
        "env": {
            "production": {
                "plugins": [
                    "transform-remove-console"
                ]
            }
        }
    }
}
